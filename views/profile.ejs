<!DOCTYPE html>
<html>
  <head>
    <title>交互作用 Interaction</title>
    <link rel="stylesheet" href="/css/global.css">
    <link rel="stylesheet" href="/css/user.css">
    <link rel="stylesheet" href="/css/profile.css">
    <script src="https://kit.fontawesome.com/721f2dd150.js" crossorigin="anonymous"></script>
  </head>
  <style>

  </style>
  <body>
    <!-- Register -->
      <div class="register-window">
        <div class="user-login">
            <form>
                <input type="text" id="user-login-id" class="user-login-input" placeholder="Username or email address" >
                <input type="password" id="user-login-pw" class="user-login-input" placeholder="Password" >
            </form>
            <input type="submit" id="login-btn" class="btn" value="Sign in" onclick="signIn()">
        </div>
        <div class="register">
            <form>
                <input type="text" id="user-register-username" class="register-input" placeholder="Username">
                <input type="text" id="user-register-email" class="register-input" placeholder="Email">
                <input type="password" id="user-register-password" class="register-input" placeholder="Password">
            </form>
            <input type="submit" id="register-btn" class="btn" value="Register" onclick="signUp()">    
        </div>
        <br>
        <br>
        <div class="login-callout">
            <span class="have-account">還沒有帳戶?</span>
            <span class="click-status">點此註冊</span>
        </div>
        <br>
        <br>
        <div class="flash-alert"></div>
    </div>
    <!-- 遮罩 -->
    <div class="register-window-background"></div>
    <!-- Register END -->
    <!-- head -->
    <div class="header">
      <a class="header-left" href="/">
        <span class="welcome">交互作用</span>
        <span class="logo">Interaction</span>
      </a>
      <div class="header-right">
          <div class="account-status">
            <img src="" alt="" class="account-status-img">
          </div>
          <div class="account-status-content"></div>
          <div class="create-btn"></div>
      </div>
      
    </div>
    <div class="header-background"></div>
    <!-- head END-->

    <div class="main-background">

      <div class="member-content flex">
        <div class="member-content-title"></div>

        <div class="member-content-title flex">
          <div class="member-img flex">
            <img src="" alt="">
            <input type="file" name="image" id="file-uploader" accept="image/png" multiple="multiple"/>
          </div>
        </div>
        <button type="submit" id="upload" class="upload submit"></button>
        <div class="edit img-edit">edit</div>
      </div>

      <div class="member-content flex">
        <div class="member-content-title">Email</div>
        <P class="member-email"></P>
        <div class="edit" ></div>
      </div>
      <br>
      <div class="member-content flex">
        <div class="member-content-title">Username</div>
        <input class="input username"  type="text">
        <div class="edit username-edit" onclick=newName()>edit</div>
      </div>
      <br>
      <div class="member-content flex">
        <div class="member-content-title">Password</div>
        <input  class="input previous" placeholder="previous password" type="password">     
        <div class="member-content-title"></div>
      </div>

      <div class="member-content flex">
        <div class="member-content-title"></div>
        <input class="input new" placeholder="new password" type="password">
        <div class="member-content-title"></div>
      </div>

      <div class="member-content flex">
        <div class="member-content-title"></div>
        <input class="input confirm" placeholder="confirm password" type="password">
        <div class="edit password-edit" onclick=newPassword()>edit</div>
      </div>
    </div>

    <script src="/js/user.js"></script>
    <script src="/js/profile.js"></script>

  </body>
</html>