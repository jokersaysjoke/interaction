<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title></title>
        <link rel="stylesheet" href="/css/global.css">
        <link rel="stylesheet" href="/css/user.css">
        <link rel="stylesheet" href="/css/live.css">
        <link rel="stylesheet" href="/css/socketio.css">
        <style>

        </style>
    </head>
    <body>

    <!-- Register -->
    <div class="register-window">
        <div class="user-login">
            <form>
                <input id="user-login-id" class="user-login-input" placeholder="Username or email address">
                <input id="user-login-pw" class="user-login-input" placeholder="Password" type="password">
            </form>
            <input type="submit" id="login-btn" class="btn" value="Sign in" onclick="signIn()">
        </div>
        <div class="register">
            <form>
                <input id="user-register-username" class="register-input" placeholder="Username">
                <input id="user-register-email" class="register-input" placeholder="Email">
                <input id="user-register-password" class="register-input" placeholder="Password" type="password">
            </form>
            <input type="submit" id="register-btn" class="btn" value="Register" onclick="signUp()">    
        </div>
        <br>
        <br>
        <div class="login-callout">
            <span class="have-account">還沒有帳戶?</span>
            <span class="click-status">點此註冊</span>
        </div>
        <br>
        <br>
        <div class="flash-alert"></div>
        </div>
        <!-- 遮罩 -->
        <div class="register-window-background"></div>
        <!-- Register END -->
        <div class="header">
            <div class="welcome"></div>
            <div class="account-status"></div>
        </div>
        <div class="header-background"></div>

        <div class="main">
            <div class="setting">
                <div class="item1 live-window">
                    <div class="live-video-window-background">
                        <video type="application/x-mpegURL" class="video" id="video" width="100%" controls>#Live-window</video>
                    </div>
                </div>
                <div class="item2 live-window">
                    <div class="close-live">#END Stream</div>
                </div>
                <div class="item3 live-window">
                    <div id="toLiveStream" class="to-Live-Stream">#START Live Stream</div>
                    <input type="text" class="streamKey" placeholder="setStreamKey"></input>
                </div>
            </div>
            <div class="live-chatroom-background">
                <div class="live-chatroom">
                    <div id="messages" class="messages"></div>
                </div>
                <form id="form" action="">
                    <input id="input" placeholder="HOST：" autocomplete="off" />
                  </form>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/hls.js@latest"></script>
        <!-- <script src="/socket.io/socket.io.js"></script> -->
        <!-- <script src="/js/user.js"></script> -->
        <script src="/js/live.js"></script>
        <!-- <script src="/js/socketio.js"></script> -->
        <script src="/js/hls.js"></script>
    <!-- <script src="/js/global.js"></script> -->
    </body>
</html>