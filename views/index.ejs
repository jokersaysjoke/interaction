<!DOCTYPE html>
<html>
  <head>
    <title>交互作用</title>
    <link rel="stylesheet" href="/css/global.css">
    <link rel="stylesheet" href="/css/user.css">
    <link rel="stylesheet" href="/css/index.css">
    <script src="https://kit.fontawesome.com/721f2dd150.js" crossorigin="anonymous"></script>
  </head>
  <style>

  </style>
  <body>
    <!-- Register -->
      <div class="register-window">
        <div class="user-login">
            <form>
                <input type="text" id="user-login-id" class="user-login-input" placeholder="Username or email address">
                <input type="password" id="user-login-pw" class="user-login-input" placeholder="Password">
            </form>
            <input type="submit" id="login-btn" class="btn" value="Sign in" onclick="signIn()">
        </div>
        <div class="register">
            <form>
                <input type="text" id="user-register-username" class="register-input" placeholder="Username">
                <input type="text" id="user-register-email" class="register-input" placeholder="Email">
                <input type="password" id="user-register-password" class="register-input" placeholder="Password">
            </form>
            <input type="submit" id="register-btn" class="btn" value="Register" onclick="signUp()">    
        </div>
        <br>
        <br>
        <div class="login-callout">
            <span class="have-account">還沒有帳戶?</span>
            <span class="click-status">點此註冊</span>
        </div>
        <br>
        <br>
        <div class="flash-alert"></div>
    </div>
    <!-- 遮罩 -->
    <div class="register-window-background"></div>
    <!-- Register END -->


    <div class="header">
      <a class="welcome" href="/" onclick="location.href='/'"></a>
      <div class="account-status"></div>
      <div id="" class="create">開直播</div>
    </div>
    <div class="header-background"></div>

    <div class="video-preview-background">
      <div>
        <div class="video-preview">preview#1</div>
        <div class="video-detail">
            <div class="video-account-pic-background">
              <div class="video-account-pic"></div>
            </div>

            <div class="video-title">
              <div class="video-title-head">可以把他想成標題</div>
              <div class="video-creater">ChunYi</div>

              <div class="video-view-count">觀看次數：
                <span class="video-view-rate">87</span>次
              </div>

              <div class="video-status video-status-live-rate"><span>11</span>人正在觀看</div>
              <div class="video-status video-status-live-background"><span class="video-status-live">※正在直播</span></div>
            </div>
        </div>
      </div>
      <div class="video-preview">preview#2</div>  
      <div class="video-preview">preview#3</div>  
      <div class="video-preview">preview#4</div>  
    </div>


    <script src="/js/user.js"></script>
    <script src="/js/index.js"></script>
  </body>
</html>