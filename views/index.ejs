<!DOCTYPE html>
<html>
  <head>
    <title></title>
    <link rel="stylesheet" href="/css/global.css">
    <link rel="stylesheet" href="/css/user.css">
    <link rel="stylesheet" href="/css/index.css">
  </head>
  <style>

  </style>
  <body>
    <!-- Register -->
      <div class="register-window">
        <div class="user-login">
            <form>
                <input type="text" id="user-login-id" class="user-login-input" placeholder="Username or email address">
                <input type="text" id="user-login-pw" class="user-login-input" placeholder="Password">
            </form>
            <input type="submit" id="login-btn" class="btn" value="Sign in" onclick="signIn()">
        </div>
        <div class="register">
            <form>
                <input type="text" id="user-register-username" class="register-input" placeholder="Username">
                <input type="text" id="user-register-email" class="register-input" placeholder="Email">
                <input type="text" id="user-register-password" class="register-input" placeholder="Password">
            </form>
            <input type="submit" id="register-btn" class="btn" value="Register" onclick="signUp()">    
        </div>
        <br>
        <br>
        <div class="login-callout">
            <span class="have-account">還沒有帳戶?</span>
            <span class="click-status">點此註冊</span>
        </div>
        <br>
        <br>
        <div class="flash-alert"></div>
    </div>
    <!-- 遮罩 -->
    <div class="register-window-background"></div>
    <!-- Register END -->


    <div class="header">
      <div class="welcome"></div>
      <div class="create"></div>
      <div class="account-status"></div>
    </div>
    <div class="header-background"></div>

    <div class="video-preview-background">
      <div class="video-preview">preview#1</div>  
      <div class="video-preview">preview#2</div>  
      <div class="video-preview">preview#3</div>  
      <div class="video-preview">preview#4</div>  
    </div>

    <script src="/js/user.js"></script>
    <script src="/js/index.js"></script>
    <!-- <script src="/js/global.js"></script> -->
  </body>
</html>